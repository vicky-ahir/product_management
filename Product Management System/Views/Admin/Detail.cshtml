@model Product_Management_System.Models.User

@{
    ViewData["Title"] = "Detail";
}

<link href="~/css/admin.css" rel="stylesheet" />

<div class="container">
    <div class="card">
        <h1 class="text-center">User Detail</h1>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <dl>
                        <dt>
                            <label>Firstame</label>
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Firstname)
                        </dd>
                        <dt>
                            <label>Birthdate</label>
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Birthdate)
                        </dd>
                        <dt>
                            <label>Email</label>
                        </dt>
                        <dt>
                             @Html.DisplayFor(model => model.Email)
                        <dt>
                            <label>Password</label>
                        </dt>
                        <dd>
                                @Html.DisplayFor(model => model.Password)
                        </dd>

                    </dl>
                </div>
                <div class="col-sm-6">
                    <dl>
                        <dt>
                            <label>Lastname</label>
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Lastname)
                        </dd>
                        <dt>
                            <label>Gender</label>
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Gender)
                        </dd>
                        <dt>
                            <label>Phonenumber</label>
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Phonenumber)
                        </dd>
                        <div>
                            <a asp-action="Edit" asp-controller="Admin" asp-route-id="@Model.User_Id" id="btnEdit" class="btn btnAddUser" title="Edit User">Edit</a>
                            <a asp-action="Index" class="btn btn-secondary mx-2 btnBackUser">Back to List</a>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>